<%#
#kind: user_data
#name: WAIK joinDomain.ps1
#oses:
#- Windows 6.1
#- Windows 6.3
#params:
#- domainJoinAccount: administrator@domain.com # use tthis account to join domain. If set, domain join will run
#- domainJoinAccountPasswd: Password for the domain Admin account
#- computerLdapPath: OU=Computers,CN=domain,CN=com # Place the computer account in specified Organizational Unit
#- computerDomain: domain.com # domain to join, optional
-%>
$user = "<%= @host.params['domainJoinAccount'] -%>"
$passwd = ConvertTo-SecureString -String "<%= @host.params['domainJoinAccountPasswd'] -%>" -AsPlainText -Force
$Credential = New-Object -TypeName System.Management.Automation.PSCredential -ArgumentList $user, $passwd
Add-Computer -DomainName <% if @host.params['computerDomain'] -%><%= @host.params['computerDomain'] -%><% else -%><%= @host.domain -%><% end -%> -Credential $Credential <% if  @host.params['computerLdapPath'] -%>-OUPath "<%= @host.params['computerLdapPath'] -%>"<% elsif snippet('WAIK OU from hostgroup') -%>-OUPath "<%= snippet('WAIK OU from hostgroup') -%>"<% end -%> -PassThru
